      "properties": {
        "platform": {
          "type": "string",
          "enum": ["GitHub", "GitLab", "Bitbucket", "Gitea", "Codeberg", "Other"]
        },
        "url_repository": { "type": "string", "format": "uri" },
        "url_documentation": { "type": "string", "format": "uri" },
